pipeline {
  agent {
    docker { image 'liquibase/liquibase:4.4.3' }
  }
  stages {
    stage('Status') {
      steps {
        sh 'liquibase status --url="jdbc:postgresql://host.docker.internal:5432/testdb" --changeLogFile=databaseChangeLog.xml --username=postgres --password=postgres'
      }
    }
    stage('Rollback') {
      steps {
        sh '''
          liquibase --url="jdbc:postgresql://host.docker.internal:5432/testdb" --changeLogFile=databaseChangeLog.xml --username=postgres --password=postgres rollback version2
        '''
      }
    }
  }
}