pipeline {
  agent {
    docker { image 'liquibase/liquibase:4.4.2' }
  }
  stages {
    stage('Status') {
      steps {
        sh 'liquibase status --url="jdbc:h2:mem:testdb" --changeLogFile=my_app-wrapper.xml --username=sa --password=password'
      }
    }
    stage('Update') {
      steps {
        sh 'liquibase update --url="jdbc:h2:mem:testdb" --changeLogFile=my_app-wrapper.xml --username=sa --password=password'
      }
    }
  }
}