pipeline {
  agent {
    docker { image 'liquibase/liquibase:4.4.2' }
  }
  stages {
    stage('Status') {
      steps {
        sh 'liquibase status --url="jdbc:mysql://noexiste:3306/testdb" --changeLogFile=my_app-wrapper.xml --username=$DB_USERNAME --password=$DB_PASSWORD'
      }
    }
    stage('Update') {
      steps {
        sh 'liquibase update --url="jdbc:mysql://db:3306/testdb" --changeLogFile=my_app-wrapper.xml --username=$DB_USERNAME --password=$DB_PASSWORD'
      }
    }
  }
}