pipeline {
  agent {
    docker { image 'liquibase/liquibase:4.4.3' }
  }

  tools{
    git 'Default'
  }
  stages {
    stage('Status') {
      steps {
        sh 'liquibase status --url="jdbc:postgresql://172.17.0.1:5432/testdb" --changeLogFile=databaseChangeLog.xml --username=postgres --password=postgres'
      }
    }
  }
  post {
    always {
      sh """
          echo "git status"
          git status
        """
    }
  }
}

