pipeline {
  agent none
  stages {
    stage('Status') {
      agent {
        docker { image 'liquibase/liquibase:4.4.3' }
      }
      steps {
        sh 'liquibase --url="jdbc:postgresql://172.17.0.1:5432/postgres" --changeLogFile=snaphot-bbdd.postgresql.sql --schemas=public,stealthis --includeSchema=true generateChangeLog --username=postgres --password=postgres'
      }
    }
    stage('Git Status') {
      agent {
        docker { 
            image 'bitnami/git:latest'
            alwaysPull true
          }
      }
      steps {
        script {
          catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                  sh "git config user.email admin@example.com"
                  sh "git config user.name example"
                  sh "git checkout -b snapshot-bbdd-branch"
                  sh "git add snaphot-bbdd.sql"
                  sh "git commit -m 'add snaphot-bbdd.sql"
                  sh "git push https://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@github.com/johannpando/jenkins-example-liquibase.git -u origin snapshot-bbdd-branch"
          }
        }
      }
    }
  }
}


